{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "Employees": {
      "type": "object",
      "properties": {
        "Employee": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "company": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "company"
            ]
          }
        }
      },
      "required": [
        "Employee"
      ]
    }
  },
  "required": [
    "Employees"
  ]
}
